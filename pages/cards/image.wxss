.page__title{
  display: inline-block;
  flex-direction: column;
  text-align: left;
  text-indent: 2rem;
  width:calc(100% - 2px);
  padding: 5px 0px;
  background-color: green;
  border: 1px solid #ccc;
  margin-top: 18px;

}

.page_title_hover{
  display: inline-block;
  flex-direction: column;
  text-align: center;
  width:calc((100% - 6px)/3);
  padding: 5px 0px;
  background-color: gray;
  border: 1px solid #ccc;
}

.section_img{
  border: 1px solid black;
  width: calc(50% - 2px);
  text-align: center;
  float: left;
  overflow: hidden;
  padding: 10px 0px;
}

.section__ctn{
  width: 100px;
  height: 100px; 
  text-align: center;
  margin:auto;
}

.section_receive{
  padding: 2px;
  background: #ccc;
  border-bottom: 1px solid #000;
  color:#fff;
  text-indent: 1rem;
}